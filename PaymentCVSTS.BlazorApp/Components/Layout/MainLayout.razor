@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JSRuntime
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        <span class="me-3">Welcome, @context.User.Identity?.Name!</span>
                        <a href="/Account/Logout" class="btn btn-outline-secondary btn-sm">Logout</a>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/Account/Login" class="btn btn-primary btn-sm">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="ms-3">About</a>
        </div>
        <article class="content px-4">
            <CascadingAuthenticationState>
                @Body
            </CascadingAuthenticationState>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>