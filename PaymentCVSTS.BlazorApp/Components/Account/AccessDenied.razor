@page "/Account/AccessDenied"

<PageTitle>Access Denied</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center mb-0">Access Denied</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem; color: #dc3545;"></i>
                    </div>
                    <h5>You do not have permission to access this resource.</h5>
                    <p class="mt-3">Please log in with an account that has the required permissions or contact your administrator.</p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">Go Home</a>
                        <a href="/Account/Login" class="btn btn-outline-secondary">Log In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>